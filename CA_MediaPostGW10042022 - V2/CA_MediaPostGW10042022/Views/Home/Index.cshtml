@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}


@if (SignInManager.IsSignedIn(User))
{

    <div class="text-center">
        <h1 class="display-4">Welcome @UserManager.GetUserName(User). You are logged in so you can create new posts and comments</h1>
    </div>
} else
{
  
     <div class="text-center">
        <h1 class="display-4">Welcome, view news posts, or register or login to add new posts and comments</h1>
    </div>
}
